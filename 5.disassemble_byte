;Author: Chaitra Bhat
;Date: 04:15:32, 25-04-2020
;Title:Disassemble a byte into higher and lower nibble
;Target: NXP based LPC2148

		AREA Program, CODE, READONLY
		ENTRY
Main 	
		LDR R1,Value
		LDR R2,Mask
		MOV R3,R1,LSR#0x4
		MOV R3,R3,LSL#0x8
		AND R1,R1,R2
		ADD R1,R1,R3
		
		STR R1,result
		
Value 	DCB &CB		
		ALIGN	
Mask	DCW &000F
		ALIGN
result	DCD 0			
		END	
		
		